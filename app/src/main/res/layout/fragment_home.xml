                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_bold"
                                android:gravity="center"
                                android:text="@string/painting_service"
                                android:textColor="#014388" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cleaningService"
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="#ECEBEB"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/imageView116"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                app:srcCompat="@drawable/housekeeping"
                                android:contentDescription="@string/cleaning_amp_pest_control" />

                            <TextView
                                android:id="@+id/textView119"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_bold"
                                android:gravity="center"
                                android:text="@string/cleaning_amp_pest_control"
                                android:textColor="#014388" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/constructionService"
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="#ECEBEB"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/imageView16"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                app:srcCompat="@drawable/constructing"
                                android:contentDescription="@string/construction_amp_renovation" />

                            <TextView
                                android:id="@+id/textView19"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_bold"
                                android:gravity="center"
                                android:text="@string/construction_amp_renovation"
                                android:textColor="#014388" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Service3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/salonService"
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="#ECEBEB"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FFFFFF"
                            android:backgroundTint="#ECEBEB"
                            android:elevation="0dp"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/imageView111112"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                app:srcCompat="@drawable/homesalon"
                                android:contentDescription="@string/home_salon_service" />

                            <TextView
                                android:id="@+id/textView111116"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_bold"
                                android:gravity="center"
                                android:text="@string/home_salon_service"
                                android:textColor="#014388"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/partyService"
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="#ECEBEB"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/imageView114"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                app:srcCompat="@drawable/confetti"
                                android:contentDescription="@string/party_celebration" />

                            <TextView
                                android:id="@+id/textView117"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_bold"
                                android:gravity="center"
                                android:text="@string/party_celebration"
                                android:textColor="#014388" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/carpentryService"
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="#ECEBEB"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/imageView14"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                app:srcCompat="@drawable/sawingman"
                                android:contentDescription="@string/carpentry_amp_aluminum" />

                            <TextView
                                android:id="@+id/textView17"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_bold"
                                android:gravity="center"
                                android:text="@string/carpentry_amp_aluminum"
                                android:textColor="#014388" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Service4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/laundryService"
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="#ECEBEB"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FFFFFF"
                            android:backgroundTint="#ECEBEB"
                            android:elevation="0dp"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/imageView1112"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                app:srcCompat="@drawable/washing"
                                android:contentDescription="@string/laundry_services" />

                            <TextView
                                android:id="@+id/textView1116"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_bold"
                                android:gravity="center"
                                android:text="@string/laundry_services"
                                android:textColor="#014388"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/vetService"
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="#ECEBEB"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/imageView1114"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                app:srcCompat="@drawable/animal"
                                android:contentDescription="@string/vet_for_my_pet_services" />

                            <TextView
                                android:id="@+id/textView1117"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_bold"
                                android:gravity="center"
                                android:text="@string/vet_for_my_pet_services"
                                android:textColor="#014388" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/healthService"
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="#ECEBEB"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/imageView1116"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                app:srcCompat="@drawable/health"
                                android:contentDescription="@string/health_at_home" />

                            <TextView
                                android:id="@+id/textView1119"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_bold"
                                android:gravity="center"
                                android:text="@string/health_at_home"
                                android:textColor="#014388" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Service5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/CarService"
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FFFFFF"
                            android:backgroundTint="#ECEBEB"
                            android:elevation="0dp"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/imageView11112"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/car"
                                android:contentDescription="@string/car_related_services" />

                            <TextView
                                android:id="@+id/textView11116"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_bold"
                                android:gravity="center"
                                android:text="@string/car_related_services"
                                android:textColor="#014388"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/gardeningService"
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="#ECEBEB"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/imageView11114"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                app:srcCompat="@drawable/gardening"
                                android:contentDescription="@string/gardening_services" />

                            <TextView
                                android:id="@+id/textView11117"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_bold"
                                android:gravity="center"
                                android:text="@string/gardening_services"
                                android:textColor="#014388" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/moversService"
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="#ECEBEB"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/imageView11116"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                app:srcCompat="@drawable/loading"
                                android:contentDescription="@string/movers_amp_packers" />

                            <TextView
                                android:id="@+id/textView11119"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_bold"
                                android:gravity="center"
                                android:text="@string/movers_amp_packers"
                                android:textColor="#014388" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#D8D8D8"
                android:backgroundTint="#D8D8D8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/servicesBox" />

            <LinearLayout
                android:id="@+id/offersSection"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/separator">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_tamma"
                    android:gravity="center"
                    android:letterSpacing="0.12"
                    android:text="@string/exclusive_hot_deals"
                    android:textColor="#014388"
                    android:textSize="20sp" />

                <HorizontalScrollView
                    android:id="@+id/scroll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/app_name"
                    android:fadeScrollbars="false"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/solarProduct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/solarbanner"
                            android:contentDescription="@string/solar_tube_deals" />

                        <ImageView
                            android:id="@+id/gyserProduct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/gyeser"
                            android:contentDescription="@string/geyser_deals" />

                        <ImageView
                            android:id="@+id/basinProduct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/basin"
                            android:contentDescription="@string/basin_deals" />

                        <ImageView
                            android:id="@+id/purifierProduct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/filter"
                            android:contentDescription="@string/purifier_deals" />
                    </LinearLayout>
                </HorizontalScrollView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/serviceSection"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/offersSection">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_tamma"
                    android:gravity="center"
                    android:letterSpacing="0.12"
                    android:text="@string/new_service_launched"
                    android:textColor="#014388"
                    android:textSize="20sp" />

                <HorizontalScrollView
                    android:id="@+id/scrollService"
