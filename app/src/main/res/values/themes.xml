<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EasyFixIt" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#EDE46138</item>
        <item name="colorPrimaryVariant">#353535</item>
        <item name="colorOnPrimary">#DF0606</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#2E1D03</item>
        <item name="colorSecondaryVariant">#03A9F4</item>
        <item name="colorOnSecondary">#FFEB3B</item>
        <item name="titleTextColor">#FFFFFF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#3F51B5</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogThem</item>
    </style>

    <style name="NewTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#FFFF</item>
        <item name="colorPrimaryVariant">#353535</item>
        <item name="android:textColor">#000000</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">#3F51B5</item>
    </style>


    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>

    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title.new" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name= "AppBottomSheetDialogThem"
        parent="Theme.Design.Light.BottomSheetDialog">

        <item name="bottomSheetStyle">@style/AppModelStyle</item>
    </style>

    <style name= "AppModelStyle"
        parent="Widget.Design.BottomSheet.Modal">

        <item name="android:background">@drawable/bottom_sheet_radius</item>
    </style>
</resources>